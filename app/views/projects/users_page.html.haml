%ul.breadcrumb
  %li
    =link_to "Home", root_path
    %span.divider /
  %li
    = link_to @project.name, project_path(@project)
    %span.divider /
  %li
    Users page

.row-fluid
  %h3
    = @project.name
    %small= @project.desc

  =form_tag project_invite_user_url(@project) do |f|
    .control-group
      .controls
        .input-prepend
          %span.add-on
            %i.icon-envelope
          =email_field :invitation, :email,:placeholder => "Invite by Email", :requered => 'requered', :data => {:provide => "typeahead", :source => @list_of_all_users_emails}
          .control-group
      .controls
        .input-prepend
          %span.add-on
            %i.icon-eye-open
          =select_tag(:role,  options_for_select(@list_of_roles))
    =button_tag(:submit, :class => "btn .pull-right")





  -@users.each do |u|
    .alone_comment_cube

      .row-fluid
        =unless u == current_user
          .pull-right
            =link_to kick_out_users_path(@project, u), :confirm => "Sure?" do |u|
              %i.icon.icon-remove
        .span3
          .avatar
            =gravatar_image_tag(u.email)

        .span9
          =u.email
          %br
          Role:
          %br
          Name:
          %br
          Phone:
          %hr
          -unless @invitation_accepted_list.include?(u.email) || u.email == current_user.email
            %small
              Not accepted invitation yet
          - else
            %small
              Last sign in:
              =distance_of_time_in_words_to_now(u.last_sign_in_at)
