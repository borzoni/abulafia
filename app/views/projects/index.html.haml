-#-for activity in @activities
-#  .row
-#    = render_activity(activity)
%p
  %h4.add_project_block
    = link_to "#" do
      %i.icon-plus.green
      %i.icon-leaf.green
  .add_new_project_field.h
    = form_for Project.new do |f|
      - if Project.new.errors.any?
        #error_explanation
          %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
          %ul
            - @project.errors.full_messages.each do |msg|
              %li= msg


      .field
        = f.text_field :name, :placeholder => "Create new project", :autocomplete => "off"
      .field
        = f.text_area :desc, :placeholder => "About project here"
        .checkbox
          = f.check_box :is_department
          is department?
      %p
        .actions
          = f.button 'Save', :class => "btn"



%table.table.table-hover
  %tr
    -#%th Name
    -#%th Desc
    -#%th
    -#%th

  - @projects.without_departments.each do |project|
    %tr
      %td
        - if project.is_department
          %h4
            %i.icon-certificate
            = link_to project.name, project
        - else
          %i.icon-leaf
          = link_to project.name, project

.lead
  Departments
