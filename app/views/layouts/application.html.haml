!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %title= content_for?(:title) ? yield(:title) : "Abulafia"
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="description" content="")
    %meta(name="author" content="")
    = csrf_meta_tags
    = yield(:head)
    = stylesheet_link_tag "application", :media => "all"
    %link{:href => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.8/themes/ui-lightness/jquery-ui.css", :rel => "stylesheet", :type => "text/css"}

    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }

    /[if lt IE 9]
      %script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js")

    -#%link(rel="shortcut icon" href="images/favicon.ico")
    -#%link(rel="apple-touch-icon" href="images/apple-touch-icon.png")
    -#%link(rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png")
    -#%link(rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{ :data => { :toggle => "collapse", :target => ".nav-collapse" }}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          =link_to "Abulafia", root_path, :class => "brand"
          .nav-collapse.collapse.navbar-responsive-collapse
            %ul.nav
              -#%li= link_to "Home", root_path
              - if controller.controller_name == "projects"
                %li.active
                  = link_to t( :projects), projects_path
              - else
                %li
                  = link_to t( :projects), projects_path


              -#%li= link_to "About", "#about"
              -#%li= link_to "Contact", "#contact"
            %p.navbar-text.pull-right
              - if user_signed_in?
                Hello,
                = link_to current_user.login, edit_user_registration_path, :tile => "Edit profile"
                = link_to destroy_user_session_path do |l|
                  %i.icon-signout{:title => "Sign out"}
              - else
                = link_to new_user_session_path do |l|
                  %i.icon-signin{:title => "Sign in"}

    .container
      .row
        -#.span2
          -#.well
          -#  .nav.nav-list
          -#    %li.nav-header
          -#      Sidebar
          -#    %li.active
          -#      here
          -#    %li
          -#      =link_to "Another place", "#"
        .span8
          - if flash[:alert] || flash[:notice]
            = gflash
          = content_tag :h1, yield(:title) if show_title
          = yield
        .span4
          .users_stories
            = render :partial => "projects/stories_all",:locals => {:project => @project, :user => current_user}
            -#.lead
            -#  My work
            -#=yield :my_work
            -#.lead
            -#  Backlog
            -#= yield :backlog
            -#.lead
            -#  Icebox
            -#= yield :icebox

      %footer.navbar-fixed-bottom
        = app_name
        Copyright &copy;  2012. All Rights Reserved.

    = javascript_include_tag "application"
