%ul.breadcrumb
  %li
    =link_to "Home", root_path
    %span.divider /
  %li
    = link_to @task.project.name, project_path(@task.project)
    %span.divider /
  %li
    =link_to "User stories", project_user_stories_path(@task.project)

-#.page-header
-#  %h3
-#= @task.project.name

-#.bs-docs-example.discussion_show
.bs-docs-example.shadow
  %p.lead
    =type_icon(@task.task_type) if @task.task_type
    &nbsp;
    #{@task.title}
    &nbsp;
    =link_to edit_task_path(@task) do |l|
      %i.icon-edit
    - if @task.tag_list.present?
      .row-fluid
        .accordion-group.well-small
          %i.icon-tags
          %small
            =@task.tag_list

.row-fluid
  .lead Discussion:
  =form_tag task_add_new_comment_path(params[:id]), :remote => true do |f|
    =hidden_field_tag "user_id", current_user.id
    =hidden_field_tag "id", @task.id
    =text_area_tag "task[comment]", "12", :class => "span12"
    .row-fluid
      =submit_tag "Comment", :class => "btn", :disable_with => 'loading...'
    %p
    .row-fluid
      %i.icon-paper-clip
      =link_to "upload file via minus.com", "http://minus.com/", :target => "_blank"




=hidden_field :mention, :logins, :data => {:logins => @project_users}


#comments_line
  = render :partial => "comments", :locals => {:comments => @task.discussion.comments, :list_of_mentions => @list_of_mentions}

