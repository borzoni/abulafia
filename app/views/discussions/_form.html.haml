= form_for [@project, @discussion] do |f|
  - if @discussion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@discussion.errors.count, "error")} prohibited this discussion from being saved:"
      %ul
        - @discussion.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, "", :class => "span8"
  .field
    = f.label :project
    = f.text_field :project_id
  .actions
    = f.submit 'Save'
